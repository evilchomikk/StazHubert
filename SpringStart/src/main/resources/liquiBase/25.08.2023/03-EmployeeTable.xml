<!--liquibase formatted xml-->
<!--changeset kulkah:1-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="kulkah" id="1">
        <createTable tableName="employee">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="id_login_data" type="int">
                <constraints nullable="false"
                             foreignKeyName="FK_employee_login_data"
                             references="login_data(id)"/>
            </column>
            <column name="id_role" type="int">
                <constraints nullable="false"
                             foreignKeyName="FK_employee_role"
                             references="role(id)"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>