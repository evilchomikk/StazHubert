<!--liquibase formatted xml-->
<!--changeset kulkah:1-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="kulkah" id="1">
        <createTable tableName="history_of_change">

            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_employee" type="int">
                <constraints nullable="false"
                             foreignKeyName="FK_history_of_change_employee"
                             references="employee(id)"/>
            </column>
            <column name="id_product" type="int">
                <constraints nullable="false"
                             foreignKeyName="FK_history_of_change_product"
                             references="product(id)"/>
            </column>
            <column name="date_of_change" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="old_price" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="new_price" type="float">
                <constraints nullable="false"/>
            </column>


        </createTable>
    </changeSet>
</databaseChangeLog>